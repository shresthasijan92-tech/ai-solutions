
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Public collections can be read by anyone.
    // Admin collections can be written to only by admins.
    match /articles/{articleId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }
    match /services/{serviceId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }
    match /projects/{projectId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }
    match /gallery/{galleryItemId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }
    match /events/{eventId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }
    match /jobs/{jobId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }
    
    // Testimonials can be created by anyone, but only read and deleted by admins.
    match /testimonials/{testimonialId} {
      allow create: if true;
      allow read, write, delete: if isAdmin();
    }

    // Default deny all other reads/writes
    match /{path=**}/{document} {
      allow read, write: if false;
    }
  }
}
