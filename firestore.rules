
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an administrator
    function isAdmin() {
      // Check if the user is authenticated and if their UID exists in the admin roles collection
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Default security: Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Public content can be read by anyone, but only written by admins.
    // This applies to services, projects, articles, gallery images, events, and jobs.
    match /services/{serviceId} {
      allow get, list: if true;
      allow read, write: if isAdmin();
    }
    match /projects/{projectId} {
      allow get, list: if true;
      allow read, write: if isAdmin();
    }
    match /articles/{articleId} {
      allow get, list: if true;
      allow read, write: if isAdmin();
    }
    match /gallery/{galleryItemId} {
      allow get, list: if true;
      allow read, write: if isAdmin();
    }
    match /events/{eventId} {
      allow get, list: if true;
      allow read, write: if isAdmin();
    }
    match /jobs/{jobId} {
      allow get, list: if true;
      allow read, write: if isAdmin();
    }
    
    // Testimonials can be read by anyone.
    // Any authenticated or anonymous user can create (submit) a testimonial.
    // Only admins can update or delete testimonials.
    match /testimonials/{testimonialId} {
      allow get, list: if true;
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // The admin roles collection can only be read and written by other admins.
    // This prevents users from making themselves admins.
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
