
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Services: Public read, admin write
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Projects: Public read, admin write
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Articles: Public read, admin write
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Gallery: Public read, admin write
    match /gallery/{galleryItemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Events: Public read, admin write
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Careers/Jobs: Public read, admin write
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Testimonials: Anyone can create (submit feedback), but only admins can read all, update, or delete
    match /testimonials/{testimonialId} {
      allow list, update, delete: if isAdmin();
      allow read, create: if true;
    }

    // Admin Roles: Only admins can manage other admins.
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
