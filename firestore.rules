rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @path N/A
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is an admin by verifying the existence of a document in /roles_admin/{userId}.
     * @path N/A
     */
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Allows anyone to read, but only admins to write.
     * @path /services/{serviceId}
     */
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Allows anyone to read, but only admins to write.
     * @path /projects/{projectId}
     */
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Allows anyone to read, but only admins to write.
     * @path /articles/{articleId}
     */
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Allows anyone to read, but only admins to write.
     * @path /gallery/{galleryItemId}
     */
    match /gallery/{galleryItemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Allows anyone to read, but only admins to write.
     * @path /events/{eventId}
     */
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Allows anyone to read, but only admins to write.
     * @path /careers/{careerId}
     */
    match /careers/{careerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Allows anyone to read the list of testimonials. Admins can create, update, and delete them.
     * @path /feedback/{feedbackId}
     */
    match /feedback/{feedbackId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Allows anyone to read, but only admins to write.
     * @path /homepageSections/{homepageSectionId}
     */
    match /homepageSections/{homepageSectionId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Restricts access to the /roles_admin collection to only authenticated users. Grants full access if a user is an admin.
     * @path /roles_admin/{userId}
     */
    match /roles_admin/{userId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if false;
      allow delete: if request.auth.uid == userId;
    }
    /**
     * @description Allows anyone to read the list of testimonials. Admins can create, update, and delete them.
     * @path /testimonials
     */
     match /testimonials/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}